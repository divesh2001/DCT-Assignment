<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MoviePlayerActivity">

    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/relControllerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <com.example.dct.utils.TextViewMedium
                android:id="@+id/tvMovieName"
                android:layout_width="wrap_content"
                android:elevation="2dp"
                android:layout_height="wrap_content"
                android:text="Big Buck Bunny"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.example.dct.utils.TextViewNormal
                android:id="@+id/tvTagLine"
                android:elevation="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A fantastic animated show"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <androidx.media3.ui.DefaultTimeBar
            android:visibility="gone"
            android:id="@+id/defaultTimeBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:buffered_color="#e5e5e5"
            app:played_color="#e63946"
            app:scrubber_color="#023047"
            app:unplayed_color="#f5ebe0" />

    </RelativeLayout>

</RelativeLayout>